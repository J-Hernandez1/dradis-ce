<%= simple_form_for [current_project, @issue],
  html: {
    data: {
      behavior: 'local-auto-save',
      auto_save_key: @auto_save_key
    }
  } do |f| %>

  <%= f.error_notification %>

  <%= label_tag :issue_text, 'Issue source input', class: 'sr-only' %>
  <%=
    f.input :text,
      label: false,
      input_html: {
        class: 'textile',
        data: {
          allow_dropdown: @issue.new_record?,
          behavior: 'auto-save rich-toolbar drop-zone',
          paths: editor_paths,
          'rich-toolbar': 'block-code bold field image italic link list-ol list-ul table',
          'rich-toolbar-uploader': '[data-behavior~=jquery-upload]'
        },
        rows: 20
      }
  %>

  <% if @issue.persisted? %>
    <%= hidden_field :issue, :original_updated_at, value: @issue.updated_at.to_i %>
  <% end %>

  <%= render 'tag_input', f: f %>

  <div class="form-actions">
    <% verb = @issue.persisted? ? 'Update' : 'Create' %>
    <div class="btn-group btn-states">
      <%= f.button :submit, "#{verb} Issue (draft)", class: 'btn btn-primary', data: { behavior: 'state-button' } %>
      <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <div class="dropdown-menu">
        <%= f.collection_radio_buttons(:state, Issue.states, :last, :first, checked: 0) do |b| %>
          <%= b.label class: 'state' do %>
            <%= b.radio_button class: 'd-none', data: { behavior: 'state-radio'} %>
            <i class="fa fa-check fa-fw"></i>
            <div class="state-label">
              <p data-behavior="state-label"><%= "#{verb} Issue (#{b.text.humanize})" %></p>
              <% case b.value %>
              <% when 0 %>
              <span>Will not be included in reports by default.</span>
              <% when 1 %>
              <span>Will become available for review in QA.</span>
              <% when 2 %>
              <span>Will be included in exported reports.</span>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  or
  <%=
    link_to 'Cancel',
    @issue.new_record? ? project_issues_path(current_project) : [current_project, @issue],
    class: 'cancel-link',
    data: {
      behavior: 'clear-local-auto-save'
    }
    %>
</div>
<% end %>
