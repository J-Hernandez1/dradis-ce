<div class="note-list">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <%= content_tag :div, class: class_names(active: current_page?(main_app.project_issues_path(current_project))) do %>
      <%= link_to main_app.project_issues_path(current_project), class: 'summary-link' do %>
        <i class="fa fa-bug"></i>
        Issues Summary
      <% end %>
    <% end %>
  </div>
</div>

<div class="inner-content">
  <%= render 'shared/sidebar_collection',
    category_id: nil,
    collection: @issues,
    name: 'Issues',
    new_path: main_app.new_project_issue_path(current_project)
  %>

  <%= render 'issues/import_box' %>

  <!-- Attachments -->
  <%= render partial: 'attachments/attachment_box', locals: { attachments_node: current_project.plugin_uploads_node } %>
</div>
